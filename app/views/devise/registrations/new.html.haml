.row
  .col-md-12
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = f.input :email
      = f.input :password, autocomplete: "off"      
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)  
      = f.input :password_confirmation, autocomplete: "off"      
      = f.input :origin_country, :label => "Where are you from ?"
      = f.input :current_country, :label => "And where are you now ?"
      = f.input :activity, :input_html => { :value => 'I walk on the moon' }

      / Discarded fields for now, to avoid drop-outs
      / = f.input :username
      / = f.input :photo, :as => :file
      / = f.input :birthdate
      / = f.input :current_city
      / = f.input :description Discarded for now

      = f.button :submit, "Sign up"